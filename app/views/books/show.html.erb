
<!--共通テンプレート(userinfo)-->
<%= render 'books/userinfo', users: @users %>


  
  <!--投稿データ-->
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
  
     <% @books.each do |book| %>
      <tr>
          <% if @user.id == book.user.id %>
        <td>
          <%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
          <br><%= book.user.name %></br>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id), class: "btn btn-sm btn-success edit" %>
        </td>
        <td>
          <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, class: "btn btn-sm btn-danger destroy", "data-confirm" => "本当に消しますか？"  %>
        </td>
          <% end %>
      </tr>
    <% end %> 
    
</table>
    </div>
  </div>
</div>



    <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>